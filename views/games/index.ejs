<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/index.css" />
<%- include('../partials/nav') %>
<section>
  
  <% if (user) { %>
    <div class ="nav-text">
<h1><%= user.profile.name %>'s Account</h1>
<!-- <form action="/games" method="POST"></form> -->
</div>

  <% } %>

</section>
<main>
  <h1>My collection:</h1>
  <p>You have <%= games.length %> games in your collection </p>
<table id="list">
  <thead>
    <tr>
      <th>Title:</th>
      <!-- <th>Hours played:</th>
      <th>Completed:</th>
      <th>Comments:</th> -->
    </tr>
  </thead>
  <tbody class="game-list">
  <% games.forEach(game => { %>
  <tr>
    <td><%= game.title %></td>
    <td>
      <form action="/games/<%= game._id %>?_method=DELETE" method="POST">
      <button type="submit">X</button>
      </form>
      </td>
    <td><a href="/games/<%= game._id %>">Details</a></td>

    </tr>
  <% }) %>
  </tbody>
</table>
</main>

<%- include('../partials/footer') %>