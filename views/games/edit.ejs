<main>
  <h1><%= title %></h1>
  <!-- my version below -->
  <!-- <form id="new-form" action="/games" method="POST"> -->

    <form id="new-form" action="/games/<%= game._id %>?_method=PUT" method="POST">


    <label for="title-input">Title:</label>
    <input type="text" name="title" id="title-input" value="<%= game.title %>"> 
    <label for="hours-played-input">Hours played:</label>
    <input type="text" name="hoursPlayed" id="hours-played-input" value="<%= game.hoursPlayed %>">

    
    <label for="completed-checkbox">Completed:</label>
    <input 
      type="checkbox"
      name="completed"
      id="completed-checkbox"
      <%= game.completed ? "checked" : "" %>
    >
    <!-- <select name="completed" id="completed-checkbox">
    </select> -->

    <button type="submit">Save changes<i class="fas fa-lock fa-xs"></i></button>
  </form>
</main>

