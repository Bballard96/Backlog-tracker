<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/forms.css" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,400;1,200&display=swap" rel="stylesheet">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <!-- my version below -->
  <!-- <form id="new-form" action="/games" method="POST"> -->

    <form id="new-form" action="/games/<%= game._id %>?_method=PUT" method="POST">


    <label for="title-input">Title:</label>
    <input type="text" name="title" id="title-input" value="<%= game.title %>"> 
    <label for="hours-played-input">Hours played:</label>
    <input type="text" name="hoursPlayed" id="hours-played-input" value="<%= game.hoursPlayed %>">
    <label for="esrb-rating-select">ESRB Rating</label>
    <select name="esrbRating" id="esrb-rating-select" >
      <option value="<%= game.esrbRating %>"><%= game.esrbRating %></option>
      <option value="E">E</option>
      <option value="T">T</option>
      <option value="M">M</option>
      <option value="AO">AO</option>
    </select>
    <label for="genre-select"><strong>Genre:</strong></label>
    <select name="genre" id="genre-select" >
      <option value="<%= game.genre %>"><%= game.genre %></option>
      <option value="action">Action</option>
      <option value="Platform">Platform</option>
      <option value="Shooter">Shooter</option>
      <option value="Fighting">Fighting</option>
      <option value="Survival">Survival</option>
      <option value="MMO">MMO</option>
      <option value="Horror">Horror</option>
      <option value="Visual Novel">Visual Novel</option>
      <option value="Puzzle">Puzzle</option>
      <option value="RPG">RPG</option>
      <option value="Sim">Sim</option>
      <option value="Racing">Racing</option>
      <option value="Adventure">Adventure</option>
      <option value="Sports">Sports</option>
      <option value="Card">Card</option>
      <option value="Battle Royale">Battle Royale</option>
    </select>
    
    <label for="completed-checkbox">Completed:</label>
    <input 
      type="checkbox"
      name="completed"
      id="completed-checkbox"
      <%= game.completed ? "checked" : "" %>
    >
    <!-- <select name="completed" id="completed-checkbox">
    </select> -->

    <button type="submit">Save changes<i class="fas fa-lock fa-xs"></i></button>
  </form>
</main>

<%- include("../partials/footer") %>